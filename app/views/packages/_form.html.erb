
<%= simple_form_for(@package) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nazwa" %>
    <%= f.input :disk_space, label: "Powierzchnia" %>
    <%= f.input :price, label: "Cena" %>
    <%= f.input :body, label: "Opis", input_html: { class: "tinymce" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zapisz", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= tinymce :language => "pl" %>
