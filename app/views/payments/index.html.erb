<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Płatności</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Płatności</strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Płatności</h3>
    <div class="ibox-tools">
      <%= link_to new_payment_path, class: "btn btn-sm btn-primary" do %>
      <i class="fa fa-plus"></i> Dodaj Płatność
      <% end %>
    </div>
  </div>
  <div class="ibox-content">
    <table class="table">
      <thead>
        <tr>
          <th>Tytuł płatności</th>
          <th>Nazwa</th>
          <th>Termin</th>
          <th>Kwota</th>
          <th width="180"></th>
        </tr>
      </thead>

      <tbody>
        <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.title %></td>
          <td><%= payment.name %></td>
          <td><%= payment.deadline %></td>
          <td><%= payment.price %></td>
          <td>
            <%= link_to 'Pokaż', payment, class: "btn btn-sm btn-primary" %>
            <%= link_to 'Edytuj', edit_payment_path(payment), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Usuń', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
