<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= @payment.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item">
        <a href="<%= payments_path %>">Płatności</a>
      </li>
      <li class="breadcrumb-item active">
        <strong><%= @payment.name %></strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Dane Płatności</h3>
    <div class="ibox-tools">
      <%= link_to 'Edycja', edit_payment_path(@payment), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Cofnij', payments_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <div class="col-sm-4">
        <p>
          <strong>Tytuł płatności</strong><br />
          <%= @payment.title %>
        </p>
        <p>
          <strong>Nazwa</strong><br />
          <%= @payment.name %>
        </p>
        <p>
          <strong>Termin</strong><br />
          <%= @payment.deadline %>
        </p>
      </div>
      <div class="col-sm-4">
        <p>
          <strong>Kwota</strong><br />
          <%= @payment.price %>
        </p>
      </div>
      <div class="col-sm-4">

      </div>
    </div>
  </div>
</div>
