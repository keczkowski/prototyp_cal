<div class="main-page">
  <div class="container login-page">
    <div class="row">
      <div class="col-12 col-md-4">
        <div class="row">
          <div class="col-12 col-lg-6 offset-lg-3 text-center">
            <%= image_tag "login/logo-cal.svg", alt: "logo-info-cal", class: "logo-logowanie" %>
            <div class="row">
              <div class="col-12 head-promotion">
                <%= image_tag "login/percent.png", class: "img-fluid percent",  alt: "percent-svg" %>Dziś w promocji
              </div>
              <div class="col-12 body-promotion">
                <p> Domena .pro</p>
                <p class="mb-4"> 14,90 na rok</p>
                <a href="https://cal.pl/" class="see-login">Zobacz
                  <%= image_tag "login/arrow-right.png", alt: "right-arrow", class: "img-fluid login-arrow" %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4 login-form-box">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <p class="login-form-title">
            Przypomnienie hasła
          </p>
          <p class="login-form-subTitle">
            Uzupełnij formularz poniżej, aby przypomnieć hasło
          </p>
          <div class="form-inputs">
            <%#= f.input :password,
            label: "Nowe hasło",
            required: true,
            autofocus: true,
            hint: ("#{@minimum_password_length} minimalnie znaków" if @minimum_password_length),
            input_html: { autocomplete: "new-password" } %>
            <%#= f.input :password_confirmation,
            label: "Potwierdź swoje nowe hasło",
            required: true,
            input_html: { autocomplete: "new-password" } %>
          </div>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Ustaw nowe hasło", class: "btn btn-sm btn-primary login-submit" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>

      <div class="col-12 col-md-3 offset-md-1">
        <p class="login-another-links">
          Inne miejsca
        </p>
        <p class="login-links">
          <a href="https://poczta.cal.pl" target="_blank" class="links">
            <i class="fa fa-envelope-open-o mr-2"></i>Logowanie do poczty
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
