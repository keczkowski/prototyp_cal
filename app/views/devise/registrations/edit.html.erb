<div class="main-page">
  <div class="container login-page">
    <div class="row">
      <div class="col-12 col-md-4">
        <div class="row">
          <div class="col-12 col-lg-6 offset-lg-3 text-center">
            <%= image_tag "login/logo-cal.svg", alt: "logo-info-cal", class: "logo-logowanie" %>
            <div class="row">
              <div class="col-12 head-promotion">
                <%= image_tag "login/percent.png", class: "img-fluid percent",  alt: "percent-svg" %>Dziś w promocji
              </div>
              <div class="col-12 body-promotion">
                <p> Domena .pro</p>
                <p class="mb-4"> 14,90 na rok</p>
                <a href="https://cal.pl/" class="see-login">Zobacz
                  <%= image_tag "login/arrow-right.png", alt: "right-arrow", class: "img-fluid login-arrow" %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4 login-form-box">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <p class="login-form-title">
              Zmiana danych do logowania
            </p>
            <p class="login-form-subTitle">
              Uzupełnij formularz poniżej, aby zmienić swoje dane do logowania
            </p>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :current_password, label: "Aktualne hasło",
                        hint: "jest wymagane do zmiany danych",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :password, label: "Hasło",
                        hint: "pozostaw puste jeśli nie chcesz go zmieniać",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: "Potwierdzenia hasła",
                        hint: "pozostaw puste jeśli nie chcesz go zmieniać",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>

            </div>

          <div class="form-actions">
            <%= f.button :submit, "Zmień dane", class: "btn btn-sm btn-primary login-submit" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>

      <div class="col-12 col-md-3 offset-md-1">
        <p class="login-another-links">
          Inne miejsca
        </p>
        <p class="login-links">
          <a href="https://poczta.cal.pl" target="_blank" class="links">
           <i class="fa fa-envelope-open-o mr-2"></i>Logowanie do poczty
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
