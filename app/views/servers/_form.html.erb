
<%= simple_form_for(@server) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :package, label: "Pakiet", input_html: { class: "select2" } %>
    <%= f.input :name, label: "Nazwa" %>
    <%= f.input :disk_space, label: "Powierzchnia" %>
    <%= f.input :paid, label: "Status" %>
    <%= f.input :paid_date, label: "Data płatności" %>
    <%= f.association :user, label: "Użytkownik", input_html: { class: "select2" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zapisz", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
